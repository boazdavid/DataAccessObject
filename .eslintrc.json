{
	"extends": "eslint:recommended",
	"env": {
		"es6": true,
		"node": true,
		"mocha": true,
		"browser": true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"globals": {
		// "_": true,
		// "global": true,
		// "require": true,
		// "DEBUG": true
	},
	"rules": {
		"array-callback-return": "warn",
		"block-scoped-var": "warn",
		"class-methods-use-this": "off",
		"consistent-return": "off",
		"default-case": "error",

		"curly": "warn",
		"eol-last": "warn",
		"eqeqeq": "warn",
		"indent": ["warn", "tab", {
			"SwitchCase": 1
		}],
		"comma-spacing": ["warn", {"before": false, "after": true}],
		"key-spacing": "warn",
		"new-cap": "warn",
		"no-caller": "error",
		"no-else-return": "warn",
		"no-eval": "error",
		"no-debugger": "warn",
		"no-console": "off",
		"no-alert": "error",
		"no-lonely-if": "warn",
		"no-mixed-spaces-and-tabs": "warn",
		"no-spaced-func": "warn",
		"no-new":"error",
		"no-param-reassign": "warn",
		"no-return-assign":"warn",
		"no-trailing-spaces": ["warn", {
			"skipBlankLines": true
		}],
		"no-unused-vars": ["warn", {
			"varsIgnorePattern": "^_.+",
			"argsIgnorePattern": "^_.+"
		}],
		"object-curly-spacing": ["warn", "always"],
		"semi": ["warn", "always"],
		"keyword-spacing": "warn",
		"space-before-blocks": "warn",
		"space-before-function-paren": ["warn", "never"],
		"wrap-iife": ["warn", "inside"],
		"yoda": "warn"
	}
}